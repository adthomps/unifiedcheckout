<html lang="en">
    <head>
        <title>Token</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        <style>
            .table {
                word-break: break-all;
                word-wrap: break-word;
            }
        </style>
    </head>
    
    <body>
        <div class="container card">
           <div class="card-body">
                 <form action="/receiptUnified" id="my-token-form" method="post">
                    <h1>Token</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Transient Token</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr scope="row">
                               
                              <td>
                                    <%=transientToken%>
                              </td>
                            </tr>  
                        </tbody>
                    </table>

                    <button type="button" id="pay-button" class="btn btn-primary">Make a Payment with Transient Token</button>
                    <input type="hidden" id="transientToken" name="transientToken">
                </form>
            </div>
        </div>
        <script>
            var payButton = document.querySelector('#pay-button');
            var flexResponse = document.querySelector('#transientToken');
            var form = document.querySelector('#my-token-form');

            payButton.addEventListener('click', function() {  
                  
                  var token = '<%-transientToken%>' ;
                  console.log(token);
                  transientToken.value = token;
                  form.submit();
            });
        </script>

    </body>
</html>